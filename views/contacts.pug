extends layout

block content
  h1= title
  p Welcome to #{title}
  a(href='/contacts/add') Add a Contact
  hr
  if contacts.length > 0
    table#contacts-table
      thead
        tr
          th First Name
          th Last Name
          th Email
          th Details
      tbody
        each val in contacts
          tr
            td= val.firstName
            td= val.lastName
            td= val.email
            td
              a(href=`/contacts/${val.id}`) View Details
